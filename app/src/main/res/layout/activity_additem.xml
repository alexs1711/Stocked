<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity"
    tools:ignore="MissingClass">


    <Button
        android:id="@+id/settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_settings_button"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/addtoDB"
        app:layout_constraintTop_toTopOf="@+id/addtoDB" />


    <Button
        android:id="@+id/products"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"

        android:background="@drawable/ic_folder_button"
        app:layout_constraintEnd_toStartOf="@+id/addtoDB"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dashboard"
        app:layout_constraintTop_toTopOf="@+id/dashboard" />

    <Button
        android:id="@+id/addtoDB"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"

        android:background="@drawable/ic_folder_add_button_blue"
        app:layout_constraintEnd_toStartOf="@+id/settings"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/products"
        app:layout_constraintTop_toTopOf="@+id/products" />

    <Button
        android:id="@+id/dashboard"
        android:layout_width="30dp"
        android:layout_height="30dp"


        android:background="@drawable/ic_home_button"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/products"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
        android:id="@+id/UpdateItemTop"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:fontFamily="@font/montserrat"
        android:text="@string/add_a_new_item"
        android:textColor="#C1000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="24sp"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:fontFamily="@font/montserrat"
        android:text="@string/item_name"
        android:textColor="#827474"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/UpdateItemName"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/UpdateItemTop" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_marginStart="4dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/item_description"
        android:textColor="#827474"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/UpdateItemDescription"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/UpdateItemName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"

        android:fontFamily="@font/montserrat"
        android:text="@string/item_unity_kg_unity_liters_pounds"
        android:textColor="#827474"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/UpdateItemUnits"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/UpdateItemDescription" />

    <EditText
        android:id="@+id/UpdateItemUnits"
        android:layout_width="0dp"
        android:layout_height="30sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/namebg"
        android:textCursorDrawable="@null"
        android:ems="15"
        android:fontFamily="@font/montserrat"
        android:hint="@string/unity"
        android:inputType="textPersonName"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="#000000"
        android:textColorHint="#77000000"
        android:textColorLink="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:fontFamily="@font/montserrat"
        android:text="@string/category"
        android:textColor="#827474"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/guideline13"
        app:layout_constraintTop_toTopOf="@+id/textView13" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:fontFamily="@font/montserrat"
        android:text="@string/item_image"
        android:textColor="#827474"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/image_upload_pic"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/UpdateItemUnits" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_upload_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/cameraicon"
        app:civ_border_color="#707070"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.646" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentStart="true"

        android:fontFamily="@font/montserrat"
        android:text="@string/item_barcode"
        android:textColor="#827474"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonscan"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/image_upload_pic" />

    <EditText
        android:id="@+id/UpdateItemBarCode"
        android:layout_width="0dp"
        android:layout_height="30sp"
        android:layout_alignBottom="@+id/UpdateItemUnits"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:textCursorDrawable="@null"
        android:background="@drawable/namebg"
        android:ems="15"
        android:fontFamily="@font/montserrat"
        android:hint="@string/bar_qr_code_number"
        android:inputType="textPersonName"
        android:paddingStart="10sp"
        android:textColor="#000000"
        android:textColorHint="#77000000"
        android:textColorLink="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonscan"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintStart_toEndOf="@+id/buttonscan"
        app:layout_constraintTop_toTopOf="@+id/buttonscan" />

    <Button
        android:id="@+id/buttonscan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/UpdateItemBarCode"
        android:layout_centerHorizontal="true"

        android:background="@drawable/ic_barcode"

        app:layout_constraintBottom_toTopOf="@+id/UpdateItem"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/UpdateItemDescription"
        android:layout_width="0dp"
        android:layout_height="80sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/namebg"
        android:textCursorDrawable="@null"
        android:ems="15"
        android:fontFamily="@font/montserrat"
        android:hint="@string/description"
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLength="255"
        android:maxLines="3"
        android:paddingStart="10sp"
        android:paddingTop="10sp"
        android:paddingEnd="10sp"
        android:paddingBottom="10sp"
        android:textColor="#000000"
        android:textColorHint="#77000000"
        android:textColorLink="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/UpdateItemName"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textCursorDrawable="@null"
        android:background="@drawable/namebg"
        android:ems="15"
        android:fontFamily="@font/montserrat"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:paddingStart="10sp"
        android:textColor="#000000"
        android:textColorHint="#77000000"
        android:textColorLink="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/UpdateItem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_rect_ngulo_134"
        android:fontFamily="@font/ebrima"
        android:text="@string/add"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline23" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.019151846" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90895295" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5523114" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/namebg"
        android:fontFamily="@font/montserrat"
        android:hint="Category"
        android:textColor="#000000"
        android:textColorHint="#77000000"
        android:textColorLink="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/image_upload_pic"

        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline13"
        app:layout_constraintTop_toTopOf="@+id/image_upload_pic" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.83" />


</androidx.constraintlayout.widget.ConstraintLayout>